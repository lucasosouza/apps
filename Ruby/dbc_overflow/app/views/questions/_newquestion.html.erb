
<%= form_for :question, url: questions_path, html: {id: 'new-question-form'}, remote: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </p>
  <p>
    <%= f.submit 'Post question'%>
  </p>
<% end %>
